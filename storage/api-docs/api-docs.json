        "/api/v3/rfc/{id}/approval": {
            "post": {
                "tags": [
                    "RFC"
                ],
                "summary": "Set or update RFC Approval",
                "description": "Create or update an RFC approval entry for a given RFC and level.",
                "operationId": "64b679cb01d92e54b4cd35b1e3a62f58",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "RFC ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "level",
                                    "approver_id"
                                ],
                                "properties": {
                                    "level": {
                                        "description": "Approval level (e.g., kasi, kabid, kadis)",
                                        "type": "string",
                                        "example": "kasi"
                                    },
                                    "approver_id": {
                                        "description": "User ID of the approver",
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "decision": {
                                        "description": "Approval decision (approve, reject, need_info, forward, or null for pending)",
                                        "type": "string",
                                        "example": "approve",
                                        "nullable": true
                                    },
                                    "reason": {
                                        "description": "Reason for the decision",
                                        "type": "string",
                                        "example": "All requirements met",
                                        "nullable": true
                                    },
                                    "approved_at": {
                                        "description": "Approval timestamp (optional)",
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2025-12-16T10:00:00Z",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "rfc_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "level": {
                                                    "type": "string",
                                                    "example": "kasi"
                                                },
                                                "approver_id": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "decision": {
                                                    "type": "string",
                                                    "example": "approve"
                                                },
                                                "reason": {
                                                    "type": "string",
                                                    "example": "All requirements met"
                                                },
                                                "approved_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-12-16T10:00:00Z"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "RFC not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "RFC not found"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/dev/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login developer (dev only)",
                "description": "Login menggunakan email dan password untuk mendapatkan Bearer token (Sanctum). \n *         Token ini digunakan untuk mengakses endpoint API lain yang membutuhkan autentikasi.",
                "operationId": "11a994ec5303111de0ef786212fb9ce7",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "description": "Email akun pengguna",
                                        "type": "string",
                                        "format": "email",
                                        "example": "admin.change@example.com"
                                    },
                                    "password": {
                                        "description": "Kata sandi akun pengguna",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login sukses. Token Bearer dan data user dikembalikan.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "description": "Token autentikasi Bearer untuk digunakan pada header Authorization",
                                            "type": "string",
                                            "example": "1|Vu0OZSgnHGwGGVaNxsHd7ojSYsipuxrIMlXqAiSOdd4034d1"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Admin Change"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "admin.change@example.com"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "admin_change"
                                                },
                                                "dinas_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Kredensial salah (email atau password tidak valid)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid credentials"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validasi input gagal (email atau password kosong)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The email field is required."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
