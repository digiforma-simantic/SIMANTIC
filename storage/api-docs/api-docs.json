{
    "openapi": "3.0.0",
    "info": {
        "title": "SIMANTIC - Change & Configuration API",
        "description": "API untuk CMDB, Change Management, Maintenance & Patch Management",
        "version": "1.0.0"
    },
    "paths": {
        "/api/sso/callback": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "SSO callback - exchange SSO token for API token",
                "description": "Mengambil token SSO (query parameter 'token') dan memanggil service SSO untuk mengambil data user. Jika user belum ada, sistem membuat user baru dan mengembalikan token Sanctum.",
                "operationId": "1bded800ac8e1180f64208c786a50e70",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Token SSO yang diterima dari provider SSO",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "eyJhbGciOi..."
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Berhasil: mengembalikan token API (Sanctum)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "berhasil login"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "1|Vu0OZSgnHGwGGVaNxsHd7ojSYsipuxrIMlXqAiSOdd4034d1"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request: token tidak disediakan atau request SSO bermasalah",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid SSO token"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "SSO Authentication"
                ],
                "summary": "SSO Callback API - JSON Response",
                "description": "Endpoint untuk testing SSO callback yang return JSON (tidak redirect). Berguna untuk testing API integration.",
                "operationId": "ec3c43b14cf4b6e29466ab06d9f46507",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "token"
                                ],
                                "properties": {
                                    "token": {
                                        "description": "SSO Bearer token",
                                        "type": "string",
                                        "example": "7|wjIAUE9TaIAd8Tqvkq5tdFe69w0Y8Xcsmqeub9sp6fa2ab51"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login SSO berhasil",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Login SSO berhasil"
                                        },
                                        "data": {
                                            "properties": {
                                                "token": {
                                                    "type": "string",
                                                    "example": "1|abc123def456..."
                                                },
                                                "user": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "Admin Kota"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "admin.kota@example.com"
                                                        },
                                                        "nip": {
                                                            "type": "string",
                                                            "example": "198501012010011001"
                                                        },
                                                        "role": {
                                                            "type": "string",
                                                            "example": "admin_kota"
                                                        },
                                                        "dinas": {
                                                            "type": "string",
                                                            "example": "Dinas Komunikasi dan Informatika",
                                                            "nullable": true
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Token tidak ditemukan atau data tidak lengkap",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Token SSO tidak ditemukan"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Token SSO tidak valid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Token SSO tidak valid"
                                        },
                                        "sso_status": {
                                            "type": "integer",
                                            "example": 401
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Terjadi kesalahan saat memproses login SSO"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "cURL error 28: Timeout",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/sso/direct-login": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Direct login from SSO portal",
                "description": "SSO portal redirects user here with token, then redirect to frontend app",
                "operationId": "4c441e38cb39255dca4e7e3d16d8655d",
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "description": "Token from SSO provider",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "redirect",
                        "in": "query",
                        "description": "Frontend path to redirect after login",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "/dashboard"
                        }
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirect to frontend with token"
                    }
                }
            }
        },
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "User login",
                "operationId": "ae23a03d7ac75f0c4e27a00a51d5c11d",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login success"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/api/v3/rfc": {
            "get": {
                "tags": [
                    "RFC"
                ],
                "summary": "Get list of RFCs",
                "description": "Retrieve a paginated list of Request for Change (RFC) records with optional status filtering",
                "operationId": "1117fafac9d9c312fb8bc57b09ca564b",
                "parameters": [
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filter by RFC status. Use 'null' to get RFCs with null status",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "pending",
                                "approved",
                                "rejected",
                                "null"
                            ]
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page (default: 4)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 4
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "rfc_service_id": {
                                                        "type": "integer",
                                                        "nullable": true
                                                    },
                                                    "ci_code": {
                                                        "type": "string",
                                                        "nullable": true
                                                    },
                                                    "title": {
                                                        "type": "string",
                                                        "example": "Update Production Server"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "nullable": true
                                                    },
                                                    "priority": {
                                                        "type": "string",
                                                        "example": "high"
                                                    },
                                                    "status": {
                                                        "type": "string",
                                                        "example": "pending"
                                                    },
                                                    "config_comment": {
                                                        "type": "string",
                                                        "nullable": true
                                                    },
                                                    "attachments": {
                                                        "type": "array",
                                                        "items": {},
                                                        "nullable": true
                                                    },
                                                    "requested_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "nullable": true
                                                    },
                                                    "asset_uuid": {
                                                        "type": "string",
                                                        "nullable": true
                                                    },
                                                    "sso_id": {
                                                        "type": "integer",
                                                        "nullable": true
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthenticated"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
